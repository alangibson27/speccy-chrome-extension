{
  "manifest_version": 2,
  "name": "Speccy Borders",
  "version": "1.0",
  "content_scripts": [{
      "matches": ["*://*/*"],
      "css": ["speccy.css", "speccy-border.css"],
      "js": ["speccy.js", "speccy_launch.js"],
      "run_at": "document_end"
  }],
  "permissions": ["storage"],
  "options_page": "options.html"
}